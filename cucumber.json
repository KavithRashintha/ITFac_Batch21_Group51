{
  "default": {
    "format": [
      "summary",
      "allure-cucumberjs/reporter"
    ],
    "formatOptions": {
      "resultsDir": "allure-results"
    },
    "paths": [
      "src/test/features/**/*.feature"
    ],
    "publishQuiet": true,
    "dryRun": false,
    "import": [
      "src/test/steps/**/*.js",
      "src/test/hooks/**/*.js",
      "src/test/context/**/*.js"
    ]
  }
}
